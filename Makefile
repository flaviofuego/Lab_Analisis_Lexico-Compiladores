# Limpiar archivos compilados
clean:
	@echo "$(YELLOW)๐งน Limpiando archivos compilados...$(NC)"
	@rm -f $(COMPILE_FILE) $(EXECUTABLE) 2>/dev/null
	@rm -f $(YACC_OUTPUT) $(YACC_HEADER) $(LEX_SYNTAX_OUTPUT) $(SYNTAX_EXECUTABLE) 2>/dev/null
	@echo "$(GREEN)โ Limpieza completada$(NC)"

# Limpiar todo (incluyendo salidas)
clean-all: clean
	@echo "$(YELLOW)๐งน Limpiando archivos de salida...$(NC)"
	@rm -f salidas/*.txt 2>/dev/null
	@echo "$(GREEN)โ Limpieza completa$(NC)"

