	@echo "$(GREEN)โ Analizador sintรกctico compilado exitosamente$(NC)"

# Verificar herramientas necesarias
check-tools:
	@which flex > /dev/null 2>&1 || (echo "$(RED)โ Error: Flex no estรก instalado$(NC)" && exit 1)
	@which gcc > /dev/null 2>&1 || (echo "$(RED)โ Error: GCC no estรก instalado$(NC)" && exit 1)
	@which bison > /dev/null 2>&1 || which yacc > /dev/null 2>&1 || (echo "$(RED)โ Error: Bison/Yacc no estรก instalado$(NC)" && exit 1)

